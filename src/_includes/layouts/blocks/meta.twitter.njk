<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@maartentibau" />
<meta name="twitter:creator" content="@maartentibau" />
<meta name="twitter:description" content="{{ description }}" />
{% if title %}
  <meta name="twitter:title" content="{{ title }} - {{ site.name }}" />
{% else %}
  <meta name="twitter:title" content="{{ site.name }}" />
{% endif %}
{% if meta %}
  <meta name="twitter:image" content="{{ meta.image | buildMetaImage }}" />
{% else %}
  <meta name="twitter:image" content="{{ '/static/meta/maarten.be-800x418.jpg' | buildUrl(true) }}" />
{% endif %}
